<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>human profile</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/fonts.css" />
  </head>
  <body>
    <header><%- include('modules/navbarProfile.ejs') %></header>
    <main>
      <div>
        <section class="profileTitle container">          
            <h2>
              <!-- Meet <%= resultHuman.human_name %> -->
            </h2>
        </section>
          
        <div class="profileSect">
        <section class="profileCont container">
          <img
          src="/images/human/<%= resultHuman.human_img ? resultHuman.human_img : 'imgDefault.png' %>"
          alt=""
        />
            <div class="profileData">
              <h3>
                <%= resultHuman.human_name %> <%= resultHuman.human_lastName %>
              </h3>
              <a href="mailto:<%= resultHuman.email %>">
                <p><%= resultHuman.email %></p>
              </a>
              <p><%= resultHuman.phone %></p>
              <p><%= resultHuman.human_description %></p>
            </div>
          </section>
        </div>

        <div class="container">
          <h2 class="cardsTitle">Look at this Pawy buddy!!!</h2>
          <section class="cardsSection">
            <% resultAnimal.forEach( (elem) => { %>
            <div class="card">
              <div class="imgContainer">
                <img
                src="/images/animal/<%= elem.animal_img ? elem.animal_img : 'imgDefault.png' %>"
                alt=""
                />
              </div>
              <div class="cardBody">
                <h3><%= elem.animal_name %></h3>
                <p><%= elem.species %></p>
                <p>Adopted in <%= elem.adopt_year %></p>
                <p><%= elem.description %></p>
              </div>
            </div>
            <% }) %>
          </div>
        </section>
      </div>

      <div class="profileTitle container">
        <div class="buttons-sect navProfileButtons">
          <button onclick="window.location.href='/human/profile/<%= resultHuman.human_id - 1 %>'">Previous</button>
          <button onclick="window.location.href='/human/profile/<%= resultHuman.human_id + 1%>'">Next</button>
        </div>
      </div>

    </main>

    <footer><%- include('modules/footer.ejs') %></footer>
  </body>
</html>



